---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import PersonalInfo from '../components/PersonalInfo.astro';

const timeline = [
  {
    year: '2024',
    title: 'LXDAO',
    description: '发起并参与建设 LXDAO，一个专注于 Web3 技术研究和开发的去中心化自治组织。',
    link: 'https://lxdao.io'
  },
  {
    year: '2023',
    title: 'ETHPanda',
    description: '创建 ETHPanda 项目，致力于推广以太坊生态系统在中文社区的发展。',
    link: 'https://ethpanda.org'
  },
  {
    year: '2022',
    title: '研究项目',
    description: '开始专注于区块链技术研究，探索去中心化应用的可能性。'
  }
];

const interests = [
  'Web3 & 区块链技术',
  '去中心化自治组织 (DAO)',
  '开源软件开发',
  '技术写作与分享',
  '社区建设',
  '创新产品设计'
];

const workWithMe = [
  {
    title: '技术咨询',
    description: '为您的项目提供 Web3 技术架构设计和开发建议',
    icon: '💡'
  },
  {
    title: '项目合作',
    description: '共同探索和开发有意义的去中心化应用',
    icon: '🤝'
  },
  {
    title: '演讲分享',
    description: '在会议、活动中分享技术见解和行业观点',
    icon: '🎤'
  },
  {
    title: '内容创作',
    description: '合作创作技术文章、教程或研究报告',
    icon: '✍️'
  }
];
---

<BaseLayout title="关于我 - 个人博客" description="了解更多关于我的背景、项目经历和专业领域。">
  <Navigation currentPath="/blog/about" lang="zh" />

  <main class="max-w-4xl mx-auto px-6 py-12">
    <!-- Personal Info -->
    <section class="mb-16">
      <PersonalInfo lang="zh" showAvatar={true} showLinks={false} />
    </section>

    <!-- About -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">About</h2>
      <div class="prose prose-lg max-w-none">
        <p class="text-gray-700 leading-relaxed mb-4">
          我是一名热衷于 Web3 技术和去中心化创新的开发者。在过去几年中，我专注于区块链技术的研究与应用，
          致力于构建更加开放、透明和去中心化的数字世界。
        </p>
        <p class="text-gray-700 leading-relaxed mb-4">
          通过参与和发起多个开源项目，我深信技术的力量能够推动社会进步。我喜欢与志同道合的人合作，
          共同探索技术的边界，创造有价值的产品和服务。
        </p>
        <p class="text-gray-700 leading-relaxed">
          除了技术开发，我也热衷于技术写作和知识分享，希望通过我的经验帮助更多人了解和参与到 Web3 的世界中来。
        </p>
      </div>
    </section>

    <!-- Timeline -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-8">Timeline</h2>
      <div class="space-y-8">
        {timeline.map((item) => (
          <div class="border-l-2 border-gray-200 pl-6 relative">
            <div class="absolute w-3 h-3 bg-gray-400 rounded-full -left-2 top-1"></div>
            <div class="space-y-2">
              <div class="flex items-center gap-3">
                <span class="text-sm text-gray-500 font-mono">{item.year}</span>
                <h3 class="text-lg font-medium text-gray-900">
                  {item.link ? (
                    <a href={item.link} target="_blank" rel="noopener noreferrer" class="hover:text-gray-600 transition-colors">
                      {item.title} ↗
                    </a>
                  ) : (
                    item.title
                  )}
                </h3>
              </div>
              <p class="text-gray-600 leading-relaxed">{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Contact -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Get in touch</h2>
      <p class="text-gray-700 leading-relaxed mb-6">
        如果您有有趣的项目想法，或者希望在 Web3 领域进行合作，我很乐意与您交流。
      </p>
      <div class="flex gap-4 text-sm">
        <a href="mailto:your@email.com" class="text-gray-500 hover:text-gray-900 transition-colors underline">
          Email
        </a>
        <a href="https://twitter.com/yourusername" target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-gray-900 transition-colors underline">
          Twitter
        </a>
      </div>
    </section>
  </main>
</BaseLayout>