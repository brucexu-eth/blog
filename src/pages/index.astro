---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import PersonalInfo from '../components/PersonalInfo.astro';
import ContentCard from '../components/ContentCard.astro';
import { getCollection } from 'astro:content';

// 获取最新内容
const allBlogPosts = await getCollection('blog', ({ data }) => {
  return data.lang === 'zh' && !data.draft;
});
const allProjects = await getCollection('projects', ({ data }) => {
  return data.lang === 'zh';
});
const allInterviews = await getCollection('interviews', ({ data }) => {
  return data.lang === 'zh';
});
const allExperiments = await getCollection('experiments', ({ data }) => {
  return data.lang === 'zh';
});

// 排序并获取最新的几篇
const latestBlogPosts = allBlogPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const featuredProjects = allProjects
  .filter(project => project.data.featured)
  .slice(0, 3);

const latestInterviews = allInterviews
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 2);

const activeExperiments = allExperiments
  .filter(exp => exp.data.status === 'active')
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 2);
---

<BaseLayout title="首页 - 个人博客" description="欢迎来到我的个人博客，这里分享我的思考、项目和经验。">
  <Navigation currentPath="/blog/" lang="zh" />

  <main class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Hero Section -->
    <section class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <PersonalInfo lang="zh" />
      </div>
    </section>

    <!-- Content Sections -->
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-20">
      <!-- Latest Blog Posts -->
      {latestBlogPosts.length > 0 && (
        <section class="mb-16">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white">最新文章</h2>
            <a
              href="/blog/blog"
              class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium transition-colors"
            >
              查看全部 →
            </a>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {latestBlogPosts.map((post) => (
              <ContentCard
                title={post.data.title}
                description={post.data.description}
                href={`/blog/blog/${post.slug}`}
                date={post.data.pubDate}
                tags={post.data.tags}
                image={post.data.heroImage}
                type="blog"
                lang="zh"
              />
            ))}
          </div>
        </section>
      )}

      <!-- Featured Projects -->
      {featuredProjects.length > 0 && (
        <section class="mb-16">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white">精选项目</h2>
            <a
              href="/blog/projects"
              class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium transition-colors"
            >
              查看全部 →
            </a>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {featuredProjects.map((project) => (
              <ContentCard
                title={project.data.title}
                description={project.data.description}
                href={`/blog/projects/${project.slug}`}
                tags={project.data.tech}
                image={project.data.image}
                type="project"
                lang="zh"
              />
            ))}
          </div>
        </section>
      )}

      <!-- Latest Interviews -->
      {latestInterviews.length > 0 && (
        <section class="mb-16">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white">最新访谈</h2>
            <a
              href="/blog/interviews"
              class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium transition-colors"
            >
              查看全部 →
            </a>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {latestInterviews.map((interview) => (
              <ContentCard
                title={interview.data.title}
                description={interview.data.description}
                href={`/blog/interviews/${interview.slug}`}
                date={interview.data.pubDate}
                type="interview"
                lang="zh"
              />
            ))}
          </div>
        </section>
      )}

      <!-- Active Experiments -->
      {activeExperiments.length > 0 && (
        <section class="mb-16">
          <div class="flex items-center justify-between mb-8">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white">进行中的实验</h2>
            <a
              href="/blog/experiments"
              class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium transition-colors"
            >
              查看全部 →
            </a>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {activeExperiments.map((experiment) => (
              <ContentCard
                title={experiment.data.title}
                description={experiment.data.description}
                href={`/blog/experiments/${experiment.slug}`}
                date={experiment.data.pubDate}
                tags={experiment.data.tech}
                type="experiment"
                lang="zh"
              />
            ))}
          </div>
        </section>
      )}

      <!-- Call to Action -->
      <section class="text-center py-16">
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
            想要了解更多？
          </h2>
          <p class="text-gray-600 dark:text-gray-300 mb-6 max-w-2xl mx-auto">
            欢迎通过邮件或社交媒体与我联系，一起探讨技术、创意和想法。
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/blog/about"
              class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors"
            >
              了解更多关于我
            </a>
            <a
              href="mailto:your@email.com"
              class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 dark:border-gray-600 text-base font-medium rounded-lg text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
            >
              联系我
            </a>
          </div>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>
